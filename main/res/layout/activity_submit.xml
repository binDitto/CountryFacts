<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="com.example.android.countryfacts.SubmitActivity"
    android:id="@+id/main_linear"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Congrats"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:id="@+id/congrats_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name!"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="44sp"
        android:gravity="center_horizontal"
        android:id="@+id/name_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You scored a"
        android:textSize="24sp"
        android:layout_marginBottom="-20dp"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:id="@+id/score_words_text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0/10"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="100sp"
        android:gravity="center_horizontal"
        android:id="@+id/score_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your knowledge on this subject is exceptional."
        android:padding="20dp"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:id="@+id/compliment_text"/>
    <Button
        android:id="@+id/try_again_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try Again"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        android:background="@drawable/button_layout"
        android:onClick="tryAgain"/>

</LinearLayout>